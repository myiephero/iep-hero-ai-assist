{
  "name": "gifted-snapshot-app",
  "version": "1.0.0",
  "description": "Gifted Snapshot tool for gifted & 2e learners",
  "main": "server/index.ts",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "tsx watch server/index.ts",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build && npm run copy:build",
    "copy:build": "rm -rf ../server/public && cp -r dist ../server/public",
    "start": "tsx server/index.ts",
    "install:all": "npm ci && cd client && npm ci"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "tsx": "^4.6.2",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}